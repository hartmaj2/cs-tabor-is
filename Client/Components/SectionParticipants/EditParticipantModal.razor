@namespace Client.Components

<ParticipantForm @bind-ThisParticipant="Participant" OnValidSubmitEvent="OnFormSubmit"> Confirm </ParticipantForm>

@code
{
    [Parameter]
    public ParticipantFormData Participant { get; set; } = new() {FirstName = string.Empty,BirthNumber = string.Empty,PhoneNumber = string.Empty,LastName =string.Empty};

    [Parameter]
    public EventCallback<ParticipantFormData> UpdateParticipant { get; set; }

    private void OnFormSubmit()
    {
        UpdateParticipant.InvokeAsync(Participant);
        ResetParticipantFormData();
    }

    private void ResetParticipantFormData()
    {
        Participant = new() {FirstName = string.Empty,BirthNumber = string.Empty,PhoneNumber = string.Empty,LastName =string.Empty};
    }
}